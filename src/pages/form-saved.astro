---
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <section>
    <article
      class="flex flex-col items-center justify-center min-h-[400px] p-6 text-center"
    >
      <div class="mb-6">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="80"
          height="80"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-green-500"
        >
          <circle cx="12" cy="12" r="10"></circle>
          <path d="m9 12 2 2 4-4"></path>
        </svg>
      </div>

      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">
        Tu evaluación ha sido guardada
      </h1>

      <div class="flex flex-wrap gap-3 justify-center">
        <a
          href="/"
          class="px-5 py-2.5 text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 font-medium rounded-lg text-sm focus:outline-none"
        >
          Ver evaluaciones guardadas
        </a>

        <a
          href="/evaluation-form"
          class="px-5 py-2.5 text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 dark:text-white dark:bg-gray-800 dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700 font-medium rounded-lg text-sm focus:outline-none"
        >
          Enviar otra evaluación
        </a>
      </div>
    </article>
  </section>
</Layout>
