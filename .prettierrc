{
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro",
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 80,
        "tabWidth": 2
      }
    },
    {
      "files": "*.tsx",
      "options": {
        "parser": "typescript",
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 80,
        "tabWidth": 2
      }
    }
  ]
}
